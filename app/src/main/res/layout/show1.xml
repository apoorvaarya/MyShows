<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgShow1"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        app:srcCompat="@drawable/tvimage1" />

    <TextView
        android:id="@+id/txtTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txtTitle1"
        android:textColor="#3F51B5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtGenre1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center|center_vertical"
        android:text="@string/txtGenre1"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtRate1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center|center_vertical"
        android:text="@string/txtRate1"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtDesc1"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="@string/txtDesc1"
        android:textSize="18sp" />
</LinearLayout>